{
  "name": "kanban-nx",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "postinstall": "node -e \"const {spawnSync}=require('child_process'); spawnSync('nx',['run-many','-t','prepare','--all'],{stdio:'inherit',shell:true}); process.exit(0);\"", 
    "prepare": "husky install",
    "build": "pnpm -w nx run-many -t build --all",
    "format": "nx format:write",
    "lint": "nx run-many -t lint --all",
    "test": "nx run-many -t test --all",
    "e2e": "pnpm exec playwright test -c apps/web-e2e/playwright.config.ts",
    "e2e:ui": "pnpm exec playwright test -c apps/web-e2e/playwright.config.ts --ui",
    "e2e:demo": "cross-env E2E_DEMO=1 pnpm exec playwright test -c apps/web-e2e/playwright.config.ts",
    "db:generate": "pnpm -F api prisma generate --schema=./prisma/schema.prisma",
    "db:migrate": "pnpm -F api prisma migrate dev --schema=./prisma/schema.prisma",
    "db:seed": "pnpm -F api run seed",
    "dev": "pnpm -w nx run-many -t serve --projects web,api",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v"
  },
  "devDependencies": {
    "@nrwl/angular": "19.8.0",
    "@playwright/test": "^1.50.0",
    "@types/node": "^24.10.0",
    "cross-env": "^7.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "nx": "19.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": "nx format:write --uncommitted"
  },
  "pnpm": {
    "overrides": {
      "rollup": "4.21.3",
      "typescript": "5.5.4",
      "@fastify/multipart": "7.7.3",
      "@fastify/static": "6.1.0"
    }
  },
  "dependencies": {
    "@angular/cdk": "^18.2.14",
    "tslib": "^2.6.2"
  }
}